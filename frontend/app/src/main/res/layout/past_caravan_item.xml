<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="Caravan ID"
        android:id="@+id/list_item_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/accept_caravan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_destination"
        android:text="Accept"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/deny_caravan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/add_btn"
        android:layout_below="@+id/list_item_destination"
        android:text="Deny"
        android:textSize="20dp"/>
</RelativeLayout>